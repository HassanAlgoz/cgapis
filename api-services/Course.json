{
    "$schema": "http://json-schema.org/draft-07/schema",

    "Course": {
        "getList": {
            "req": {
                "properties":  {
                    "skip":    { "type": "number", "default": 0  },
                    "limit":   { "type": "number", "default": 10 },
                    "context": { "$ref": "#DataContext" }
                }
            },
            "res": {
                "properties": {
                    "courses":  {
                        "type":  "array",
                        "items": {
                            "$ref": "Course.schema.json"
                        }
                    }
                }
            }
        },

        "getOne": {
            "req": {
                "properties":  {
                    "id":    { "type": "string" }
                }
            },
            "res": {
                "properties": {
                    "course":  { "$ref": "Course.schema.json" }
                }
            }
        },

        "create": {
            "req": {
                "properties":  {
                    "course": { "$ref": "Course.schema.json" }
                }
            },
            "res": {
                "properties": {
                    "id": { "type": "string" }
                }
            }
        },

        "update": {
            "req": {
                "properties":  {
                    "course": { "$ref": "Course.schema.json" }
                }
            }
        },

        "addStudent": {
            "req": {
                "properties":  {
                    "id": { "type": "string" },
                    "student": { "$ref": "User.schema.json" }
                }
            }
        },

        "removeStudent": {
            "req": {
                "properties":  {
                    "id": { "type": "string" },
                    "studentID": { "type": "string" }
                }
            }
        }
    },

    "definitions": {
        "DataContext": {
            "$id": "#DataContext",
            "type": "string",
            "enum": [
                "BROWSING",
                "SEARCHING",
                "EMBEDDED"
            ],
            "default": "BROWSING"
        }
    }
}