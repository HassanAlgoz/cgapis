{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Response Status Schema",
    "type": "object",

    "properties": {

        "code": {
            "type": "string",
            "enum": [
                "OK",
                "UNAVAILABLE",
                "UNIMPLEMENTED",
                "UNAUTHORIZED",
                "UNAUTHENTICATED",
                "INVALID_PARAMETERS",
                "UNKNOWN"
            ],
            "default": "UNIMPLEMENTED"
        },

        "message": { "type": "string" },
        "errors":  { "type": "object" }
    },

    "required": ["code", "message"],
    "additionalProperties": false
}