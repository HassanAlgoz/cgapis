{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Response Status Schema",
    "type": "object",

    "properties": {

        "code": {
            "type": "string",
            "enum": [
                "OK",
                "UNAVAILABLE",
                "UNIMPLEMENTED",
                "UNAUTHORIZED",
                "UNAUTHENTICATED",
                "INVALID_PARAMETERS",
                "UNKNOWN"
            ],
            "default": "UNIMPLEMENTED"
        },

        "message": {
            "type": "string",
            "description": "Human-readable helpful summary message directed to the user"
        },
        "errors":  {
            "description": "errors could be anything",
            "anyOf": [
                { "type": "object" },
                { "type": "string" },
                { "type": "array" }
            ] 
        }
    },

    "required": ["code", "message"],
    "additionalProperties": false
}